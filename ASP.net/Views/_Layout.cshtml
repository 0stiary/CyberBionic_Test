    <link rel="stylesheet" href="~/css/booksList.css"/>
</head>
<body>

<div class="container-fluid">
    <header class="d-flex py-3">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a asp-controller="Home" asp-action="Index" class="nav-link">Главная</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Authors" asp-action="Index" class="nav-link">Авторы</a>
            </li>
        </ul>
    </header>
    <main>
        @RenderBody()
    </main>
</div>
</body>
</html>
@await RenderSectionAsync("scripts", false)